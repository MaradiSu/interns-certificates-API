// .vscode/launch.json
{
    "version": "0.2.0",
    "configurations": [
        
      {
        "type": "node",
        "request": "launch",
        "name": "Debug Node.js App (Development)",
        "program": "${workspaceFolder}/api/app.js",
        "runtimeArgs": ["--inspect"],
        "env": {
          "DEV_TEMPLATE_PATH":"${workspaceFolder}/api/dev_templates",
          "PROD_TEMPLATE_PATH":"${workspaceFolder}/api/prod_templates",
          "NODE_ENV":"development",
          "OUTPUT_PATH" :"/home/ec2-user/"
        }
      }
    ]
  }
  